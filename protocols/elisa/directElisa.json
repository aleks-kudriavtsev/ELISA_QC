{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "protocols/elisa/directElisa.json",
  "title": "Direct ELISA Protocol Template",
  "description": "Template for direct ELISA workflows where antigen is immobilized and detected with an enzyme-conjugated primary antibody.",
  "type": "object",
  "required": [
    "schemaVersion",
    "protocolId",
    "name",
    "description",
    "applicability",
    "reagents",
    "buffers",
    "steps"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the protocol template schema.",
      "default": "1.0.0"
    },
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol template.",
      "default": "direct-elisa"
    },
    "name": {
      "type": "string",
      "const": "Direct ELISA"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of the protocol."
    },
    "applicability": {
      "type": "string",
      "description": "When to use the protocol and what it detects."
    },
    "reagents": {
      "type": "array",
      "description": "Primary reagents used in the assay.",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "buffers": {
      "type": "array",
      "description": "Buffers used across washing, blocking, and dilutions.",
      "items": {
        "type": "object",
        "required": ["id", "name", "purpose"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "minItems": 7,
      "maxItems": 7,
      "prefixItems": [
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-coating" },
            "name": { "const": "Coating" },
            "stepType": { "const": "coating" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-blocking" },
            "name": { "const": "Blocking" },
            "stepType": { "const": "blocking" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-incubation" },
            "name": { "const": "Incubation (Primary Antibody)" },
            "stepType": { "const": "incubation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-wash" },
            "name": { "const": "Wash" },
            "stepType": { "const": "wash" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-substrate" },
            "name": { "const": "Substrate" },
            "stepType": { "const": "substrate" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-stop" },
            "name": { "const": "Stop Reaction" },
            "stepType": { "const": "stop" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-read" },
            "name": { "const": "Read" },
            "stepType": { "const": "read" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "od" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        }
      ],
      "items": false
    }
  },
  "definitions": {
    "field": {
      "type": "object",
      "required": ["fieldId", "label", "dataType"],
      "properties": {
        "fieldId": {
          "type": "string",
          "enum": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl",
            "od"
          ]
        },
        "label": { "type": "string" },
        "dataType": {
          "type": "string",
          "enum": ["number", "string"]
        },
        "unit": { "type": "string" },
        "required": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
