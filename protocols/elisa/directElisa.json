{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "protocols/elisa/directElisa.json",
  "title": "Direct ELISA Protocol Template",
  "description": "Template for direct ELISA workflows where antigen is immobilized and detected with an enzyme-conjugated primary antibody.",
  "type": "object",
  "required": [
    "schemaVersion",
    "protocolId",
    "name",
    "description",
    "applicability",
    "reagents",
    "buffers",
    "steps"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the protocol template schema.",
      "default": "1.3.0"
    },
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol template.",
      "default": "direct-elisa"
    },
    "name": {
      "type": "string",
      "const": "Direct ELISA"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of the protocol."
    },
    "applicability": {
      "type": "string",
      "description": "When to use the protocol and what it detects."
    },
    "reagents": {
      "type": "array",
      "description": "Primary reagents used in the assay.",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "buffers": {
      "type": "array",
      "description": "Buffers used across washing, blocking, and dilutions.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "purpose",
          "ph",
          "composition",
          "preparationDate",
          "expirationDate",
          "lotNumber"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "ph": { "type": "number" },
          "composition": { "type": "string" },
          "preparationDate": { "type": "string", "format": "date" },
          "expirationDate": { "type": "string", "format": "date" },
          "lotNumber": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "minItems": 10,
      "maxItems": 11,
      "prefixItems": [
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-buffer-preparation" },
            "name": { "const": "Buffer preparation" },
            "stepType": { "const": "bufferPreparation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "composition" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "preparationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "expirationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "lotNumber" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "composition",
                "label": "Состав буфера",
                "placeholder": "Компоненты и концентрации",
                "dataType": "string"
              },
              {
                "id": "preparationDate",
                "label": "Дата приготовления",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "expirationDate",
                "label": "Срок годности",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "lotNumber",
                "label": "Партия",
                "placeholder": "Например, BUF-2024-05",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Буфер подготовлен и промаркирован"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-ph-check" },
            "name": { "const": "pH verification" },
            "stepType": { "const": "phCheck" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "ph" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "ph",
                "label": "pH",
                "placeholder": "Например, 7.4",
                "dataType": "number"
              }
            ],
            "confirmationLabel": "pH подтвержден"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-storage-check" },
            "name": { "const": "Lot & storage conditions" },
            "stepType": { "const": "storageCheck" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "lotNumber" } }, "required": ["fieldId"] } },
                {
                  "contains": {
                    "properties": { "fieldId": { "const": "storageConditions" } },
                    "required": ["fieldId"]
                  }
                }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "lotNumber",
                "label": "Партия",
                "placeholder": "Например, BUF-2024-05",
                "dataType": "string"
              },
              {
                "id": "storageConditions",
                "label": "Условия хранения",
                "placeholder": "Например, 2-8°C, темнота",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Партия и условия хранения проверены"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-concentration-measurement" },
            "name": { "const": "Измерение концентрации" },
            "stepType": { "const": "concentrationMeasurement" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                {
                  "contains": {
                    "properties": {
                      "fieldId": { "const": "concentrationMethod" }
                    },
                    "required": ["fieldId"]
                  }
                },
                {
                  "contains": {
                    "properties": { "fieldId": { "const": "concentrationValue" } },
                    "required": ["fieldId"]
                  }
                },
                {
                  "contains": {
                    "properties": { "fieldId": { "const": "measurementDate" } },
                    "required": ["fieldId"]
                  }
                },
                {
                  "contains": {
                    "properties": {
                      "fieldId": { "const": "measurementOperator" }
                    },
                    "required": ["fieldId"]
                  }
                }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "concentrationMethod",
                "label": "Метод",
                "placeholder": "A280 / Lowry / Bradford",
                "dataType": "string"
              },
              {
                "id": "concentrationValue",
                "label": "Концентрация",
                "placeholder": "Например, 0.5",
                "unit": "мкг/мл",
                "dataType": "number",
                "minValue": 0.1,
                "warningMessage": "Концентрация ниже минимального уровня (0.1 мкг/мл)."
              },
              {
                "id": "measurementDate",
                "label": "Дата",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "measurementOperator",
                "label": "Оператор",
                "placeholder": "ФИО",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Концентрация измерена"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-coating" },
            "name": { "const": "Coating" },
            "stepType": { "const": "coating" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-coating-assessment" },
            "name": { "const": "Оценка сорбции/покрытия" },
            "stepType": { "const": "coatingAssessment" },
            "expectedFields": {
              "type": "array",
              "minItems": 5,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "odControl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "odControlMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "odControlMax" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "odControl",
                "label": "OD-контроль",
                "placeholder": "Например, 0.85",
                "unit": "OD",
                "dataType": "number"
              },
              {
                "id": "odControlMin",
                "label": "Минимум OD-контроля",
                "placeholder": "Например, 0.60",
                "unit": "OD",
                "dataType": "number"
              },
              {
                "id": "odControlMax",
                "label": "Максимум OD-контроля",
                "placeholder": "Например, 1.10",
                "unit": "OD",
                "dataType": "number"
              },
              {
                "id": "temperatureC",
                "label": "Температура инкубации",
                "placeholder": "Например, 25",
                "unit": "°C",
                "dataType": "number"
              },
              {
                "id": "timeMin",
                "label": "Время инкубации",
                "placeholder": "Например, 60",
                "unit": "мин",
                "dataType": "number"
              }
            ],
            "confirmationLabel": "Сорбция/покрытие оценены"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-blocking" },
            "name": { "const": "Blocking" },
            "stepType": { "const": "blocking" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-incubation" },
            "name": { "const": "Incubation (Primary Antibody)" },
            "stepType": { "const": "incubation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-wash" },
            "name": { "const": "Wash" },
            "stepType": { "const": "wash" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-substrate" },
            "name": { "const": "Substrate" },
            "stepType": { "const": "substrate" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-stop" },
            "name": { "const": "Stop Reaction" },
            "stepType": { "const": "stop" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "direct-read" },
            "name": { "const": "Read" },
            "stepType": { "const": "read" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "od" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        }
      ],
      "items": false
    }
  },
