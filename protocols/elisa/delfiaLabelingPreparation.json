            "confirmationLabel": "Партия и условия хранения проверены"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "delfia-material-check" },
            "name": { "const": "Material Check & Storage" },
