{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "protocols/elisa/delfiaLabelingPreparation.json",
  "title": "DELFIA Labeling Preparation Protocol Template",
  "description": "Template for preparing Eu-N1 DTA chelate labeling reactions, purification, and characterization for DELFIA-style assays.",
  "type": "object",
  "required": [
    "schemaVersion",
    "protocolId",
    "name",
    "description",
    "applicability",
    "reagents",
    "buffers",
    "steps"
