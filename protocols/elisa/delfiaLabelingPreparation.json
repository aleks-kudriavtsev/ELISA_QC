                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "expirationDate",
                "label": "Срок годности",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "lotNumber",
                "label": "Партия",
                "placeholder": "Например, BUF-2024-05",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Буфер подготовлен и промаркирован"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "delfia-ph-check" },
            "name": { "const": "pH verification" },
            "stepType": { "const": "phCheck" },
