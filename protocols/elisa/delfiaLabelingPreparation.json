  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the protocol template schema.",
      "default": "1.1.0"
    },
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol template.",
      "default": "delfia-labeling-preparation"
    },
    "name": {
      "type": "string",
      "const": "DELFIA Labeling Preparation"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of the protocol."
    },
    "applicability": {
      "type": "string",
      "description": "When to use the protocol and what it prepares."
    },
    "reagents": {
      "type": "array",
      "description": "Primary reagents used in the labeling preparation.",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "buffers": {
      "type": "array",
      "description": "Buffers used across labeling and purification.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "purpose",
          "ph",
          "composition",
          "preparationDate",
          "expirationDate",
          "lotNumber"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "ph": { "type": "number" },
          "composition": { "type": "string" },
          "preparationDate": { "type": "string", "format": "date" },
          "expirationDate": { "type": "string", "format": "date" },
          "lotNumber": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "minItems": 14,
      "maxItems": 14,
      "prefixItems": [
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "delfia-buffer-preparation" },
            "name": { "const": "Buffer preparation" },
            "stepType": { "const": "bufferPreparation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "composition" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "preparationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "expirationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "lotNumber" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "composition",
                "label": "Состав буфера",
                "placeholder": "Компоненты и концентрации",
                "dataType": "string"
