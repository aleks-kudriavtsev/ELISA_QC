        }
      ]
    }
  ],
  "definitions": {
    "field": {
      "type": "object",
      "required": ["fieldId", "label", "dataType"],
      "properties": {
        "fieldId": {
          "type": "string",
          "enum": [
            "ph",
            "composition",
            "preparationDate",
            "expirationDate",
            "lotNumber",
            "storageConditions",
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl",
            "od"
          ]
        },
        "label": { "type": "string" },
        "dataType": {
          "type": "string",
          "enum": ["number", "string"]
        },
        "unit": { "type": "string" },
        "required": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
