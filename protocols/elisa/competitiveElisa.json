{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "protocols/elisa/competitiveElisa.json",
  "title": "Competitive ELISA Protocol Template",
  "description": "Template for competitive ELISA workflows where sample analyte competes with a labeled antigen or antibody for binding sites.",
  "type": "object",
  "required": [
    "schemaVersion",
    "protocolId",
    "name",
    "description",
    "applicability",
    "reagents",
    "buffers",
    "steps"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the protocol template schema.",
      "default": "1.0.0"
    },
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol template.",
      "default": "competitive-elisa"
    },
    "name": {
      "type": "string",
      "const": "Competitive ELISA"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of the protocol."
    },
    "applicability": {
      "type": "string",
      "description": "When to use the protocol and what it detects."
    },
    "reagents": {
      "type": "array",
      "description": "Primary reagents used in the assay.",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "buffers": {
      "type": "array",
      "description": "Buffers used across washing, blocking, and dilutions.",
      "items": {
        "type": "object",
        "required": ["id", "name", "purpose"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "minItems": 7,
      "maxItems": 7,
      "prefixItems": [
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-coating" },
            "name": { "const": "Coating" },
            "stepType": { "const": "coating" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-blocking" },
            "name": { "const": "Blocking" },
            "stepType": { "const": "blocking" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-incubation" },
            "name": { "const": "Incubation (Competition)" },
            "stepType": { "const": "incubation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-wash" },
            "name": { "const": "Wash" },
            "stepType": { "const": "wash" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-substrate" },
            "name": { "const": "Substrate" },
            "stepType": { "const": "substrate" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-stop" },
            "name": { "const": "Stop Reaction" },
            "stepType": { "const": "stop" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-read" },
            "name": { "const": "Read" },
            "stepType": { "const": "read" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "od" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        }
      ],
      "items": false
    }
  },
  "versionHistory": [
    {
      "version": "1.0.0",
      "releasedAt": "2024-01-01T00:00:00Z",
      "summary": "Initial protocol definition.",
      "steps": [
        {
          "stepId": "competitive-coating",
          "stepName": "Coating",
          "expectedFieldIds": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl"
          ]
        },
        {
          "stepId": "competitive-blocking",
          "stepName": "Blocking",
          "expectedFieldIds": ["temperatureC", "timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-incubation",
          "stepName": "Incubation (Competition)",
          "expectedFieldIds": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl"
          ]
        },
        {
          "stepId": "competitive-wash",
          "stepName": "Wash",
          "expectedFieldIds": ["timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-substrate",
          "stepName": "Substrate",
          "expectedFieldIds": ["temperatureC", "timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-stop",
          "stepName": "Stop Reaction",
          "expectedFieldIds": ["volumeUl"]
        },
        {
          "stepId": "competitive-read",
          "stepName": "Read",
          "expectedFieldIds": ["od"]
        }
      ]
    }
  ],
  "definitions": {
    "field": {
      "type": "object",
      "required": ["fieldId", "label", "dataType"],
      "properties": {
        "fieldId": {
          "type": "string",
          "enum": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl",
            "od"
          ]
        },
        "label": { "type": "string" },
        "dataType": {
          "type": "string",
          "enum": ["number", "string"]
        },
        "unit": { "type": "string" },
        "required": { "type": "boolean", "default": true }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
