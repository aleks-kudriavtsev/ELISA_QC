{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "protocols/elisa/competitiveElisa.json",
  "title": "Competitive ELISA Protocol Template",
  "description": "Template for competitive ELISA workflows where sample analyte competes with a labeled antigen or antibody for binding sites.",
  "type": "object",
  "required": [
    "schemaVersion",
    "protocolId",
    "name",
    "description",
    "applicability",
    "reagents",
    "buffers",
    "steps"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the protocol template schema.",
      "default": "1.1.0"
    },
    "protocolId": {
      "type": "string",
      "description": "Unique identifier for the protocol template.",
      "default": "competitive-elisa"
    },
    "name": {
      "type": "string",
      "const": "Competitive ELISA"
    },
    "description": {
      "type": "string",
      "description": "Human-readable summary of the protocol."
    },
    "applicability": {
      "type": "string",
      "description": "When to use the protocol and what it detects."
    },
    "reagents": {
      "type": "array",
      "description": "Primary reagents used in the assay.",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "role": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "buffers": {
      "type": "array",
      "description": "Buffers used across washing, blocking, and dilutions.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "purpose",
          "ph",
          "composition",
          "preparationDate",
          "expirationDate",
          "lotNumber"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "purpose": { "type": "string" },
          "ph": { "type": "number" },
          "composition": { "type": "string" },
          "preparationDate": { "type": "string", "format": "date" },
          "expirationDate": { "type": "string", "format": "date" },
          "lotNumber": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "steps": {
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "prefixItems": [
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-buffer-preparation" },
            "name": { "const": "Buffer preparation" },
            "stepType": { "const": "bufferPreparation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "composition" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "preparationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "expirationDate" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "lotNumber" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "composition",
                "label": "Состав буфера",
                "placeholder": "Компоненты и концентрации",
                "dataType": "string"
              },
              {
                "id": "preparationDate",
                "label": "Дата приготовления",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "expirationDate",
                "label": "Срок годности",
                "placeholder": "YYYY-MM-DD",
                "dataType": "string"
              },
              {
                "id": "lotNumber",
                "label": "Партия",
                "placeholder": "Например, BUF-2024-05",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Буфер подготовлен и промаркирован"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-ph-check" },
            "name": { "const": "pH verification" },
            "stepType": { "const": "phCheck" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "ph" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "ph",
                "label": "pH",
                "placeholder": "Например, 7.4",
                "dataType": "number"
              }
            ],
            "confirmationLabel": "pH подтвержден"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-storage-check" },
            "name": { "const": "Lot & storage conditions" },
            "stepType": { "const": "storageCheck" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "lotNumber" } }, "required": ["fieldId"] } },
                {
                  "contains": {
                    "properties": { "fieldId": { "const": "storageConditions" } },
                    "required": ["fieldId"]
                  }
                }
              ]
            }
          },
          "x-ui": {
            "fields": [
              {
                "id": "lotNumber",
                "label": "Партия",
                "placeholder": "Например, BUF-2024-05",
                "dataType": "string"
              },
              {
                "id": "storageConditions",
                "label": "Условия хранения",
                "placeholder": "Например, 2-8°C, темнота",
                "dataType": "string"
              }
            ],
            "confirmationLabel": "Партия и условия хранения проверены"
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-coating" },
            "name": { "const": "Coating" },
            "stepType": { "const": "coating" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-blocking" },
            "name": { "const": "Blocking" },
            "stepType": { "const": "blocking" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-incubation" },
            "name": { "const": "Incubation (Competition)" },
            "stepType": { "const": "incubation" },
            "expectedFields": {
              "type": "array",
              "minItems": 4,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "concentrationUgMl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-wash" },
            "name": { "const": "Wash" },
            "stepType": { "const": "wash" },
            "expectedFields": {
              "type": "array",
              "minItems": 2,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-substrate" },
            "name": { "const": "Substrate" },
            "stepType": { "const": "substrate" },
            "expectedFields": {
              "type": "array",
              "minItems": 3,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "temperatureC" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "timeMin" } }, "required": ["fieldId"] } },
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-stop" },
            "name": { "const": "Stop Reaction" },
            "stepType": { "const": "stop" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "volumeUl" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["id", "name", "stepType", "expectedFields"],
          "properties": {
            "id": { "const": "competitive-read" },
            "name": { "const": "Read" },
            "stepType": { "const": "read" },
            "expectedFields": {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/definitions/field" },
              "allOf": [
                { "contains": { "properties": { "fieldId": { "const": "od" } }, "required": ["fieldId"] } }
              ]
            }
          },
          "additionalProperties": false
        }
      ],
      "items": false
    }
  },
  "versionHistory": [
    {
      "version": "1.1.0",
      "releasedAt": "2024-06-01T00:00:00Z",
      "summary": "Added buffer preparation, pH verification, and storage checks.",
      "steps": [
        {
          "stepId": "competitive-buffer-preparation",
          "stepName": "Buffer preparation",
          "expectedFieldIds": [
            "composition",
            "preparationDate",
            "expirationDate",
            "lotNumber"
          ]
        },
        {
          "stepId": "competitive-ph-check",
          "stepName": "pH verification",
          "expectedFieldIds": ["ph"]
        },
        {
          "stepId": "competitive-storage-check",
          "stepName": "Lot & storage conditions",
          "expectedFieldIds": ["lotNumber", "storageConditions"]
        },
        {
          "stepId": "competitive-coating",
          "stepName": "Coating",
          "expectedFieldIds": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl"
          ]
        },
        {
          "stepId": "competitive-blocking",
          "stepName": "Blocking",
          "expectedFieldIds": ["temperatureC", "timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-incubation",
          "stepName": "Incubation (Competition)",
          "expectedFieldIds": [
            "temperatureC",
            "timeMin",
            "volumeUl",
            "concentrationUgMl"
          ]
        },
        {
          "stepId": "competitive-wash",
          "stepName": "Wash",
          "expectedFieldIds": ["timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-substrate",
          "stepName": "Substrate",
          "expectedFieldIds": ["temperatureC", "timeMin", "volumeUl"]
        },
        {
          "stepId": "competitive-stop",
          "stepName": "Stop Reaction",
          "expectedFieldIds": ["volumeUl"]
        },
        {
          "stepId": "competitive-read",
          "stepName": "Read",
          "expectedFieldIds": ["od"]
        }
      ]
    },
    {
      "version": "1.0.0",
      "releasedAt": "2024-01-01T00:00:00Z",
